<%= form_with(model: book, local: true) do |form| %>
  <% if book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(book.errors.count, "error") %> prohibited this book from being saved:</h2>

      <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, id: :book_title %>
  </div>

  <div class="field">
    <%= form.label :author %>
    <%= form.text_field :author, id: :book_author %>
  </div>

  <div class="field">
    <%= form.label :status %>
    <%= form.select :status, ["Available", "Checkout"], prompt: "Select Status" %>
  </div>

  <div class="field">
    <%= form.label :checked_out_by %>
    <%= form.text_field :checked_out_by, id: :book_checked_out_by %>
  </div>

  <div class="field">
    <%= form.label :library_zone_id %>
    <%= form.collection_select :library_zone_id, LibraryZone.all, :id, :name, prompt: "Select Library" %>

  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
